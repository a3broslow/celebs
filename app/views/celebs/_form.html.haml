= simple_form_for @celeb, html: { multipart: true } do |f|
	- if @celeb.errors.any?
		#errors
			%h2
			= pluralize(@celeb.errors.count, "error")
			prevented this Celeb from saving
			%ul
				-@celeb.errors.full_messages.each do  |msg|
				%li= msg

				.form-group
				= f.input :title, input_html: { class: 'form-control' }

		.form-group
		= f.input :description, input_html: { class: 'form-control' }
	
		=f.button :submit, class: "btn btn-primary"
